import tkinter as tk
from PIL import Image, ImageTk

def zoom_image(image_label, image, scale_factor=1.0, duration=1000):
    width, height = image.width(), image.height()
    target_width, target_height = int(width * scale_factor), int(height * scale_factor)
    
    # Create a resized image
    resized_image = image.resize((target_width, target_height), Image.ANTIALIAS)
    resized_photo = ImageTk.PhotoImage(resized_image)
    
    # Update the image label with the resized image
    image_label.configure(image=resized_photo)
    image_label.image = resized_photo
    
    if scale_factor < 1.0:
        # Continue zooming in until scale_factor reaches 1.0
        root.after(duration, zoom_image, image_label, image, scale_factor + 0.02, duration)
    
def init_results_frame():
    results_frame.pack(pady=10)
    
    # Start the zoom animation for the results image
    zoom_image(results_image_label, results_image, 1.0, 10)

# Your existing code
root = tk.Tk()
root.title("Animation Example")

background_color = "white"

results_frame = tk.Frame(root, background=background_color)
results_label = tk.Label(results_frame, text="Tadaa!", font=("Roboto", 32))
results_label.pack()

results_text = """
You've made [dish name]!
"""
results_text_label = tk.Label(results_frame, text=results_text, wraplength=1000, background=background_color, font=("Roboto", "16"))
results_text_label.pack(pady=10)

results_image = Image.open("final cards/hargow.png")
results_image_label = tk.Label(results_frame, image=None)
results_image_label.pack()

continue_button = tk.Button(results_frame, text="Continue")
continue_button.pack(pady=10)

back_button = tk.Button(results_frame, text="Back")
back_button.pack(pady=10)

root.after(1000, init_results_frame)  # Initiate the results frame after 1000ms (1 second)

root.mainloop()
